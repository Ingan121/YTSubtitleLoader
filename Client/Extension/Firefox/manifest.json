{
  "manifest_version": 2,
  "name": "YTSubtitleLoader",
  "version": "2.3.1",
  "author": "RomanHue",
  "homepage_url": "https://www.ytsubs.org/",
  "description": "Load custom subtitles / closed captions to YouTube",

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["ytsl-injector.js"]
    }
  ],

  "permissions": [
    "*://*.ytsubs.org/*",
    "*://*.ytsubtitleloader.tk/*"
  ],
  
  "web_accessible_resources": [
    "ytsl.js",
    "JavascriptSubtitlesOctopus/*"
  ]
}
