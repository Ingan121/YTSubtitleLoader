{

  "manifest_version": 2,
  "name": "YTSubtitleLoader",
  "version": "2.3",
  "author": "RomanHue",
  "homepage_url": "https://www.ytsubs.org/",
  "description": "Load custom subtitles / closed captions to YouTube",

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["ytsl.js"]
    }
  ],

  "permissions": [
    "*://*.ytsubs.org/*",
    "*://*.ytsubtitleloader.tk/*"
  ]
}
